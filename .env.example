
# Option B: OpenRouter (OpenAI-compatible) with Mistral models
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=mistralai/mistral-7b-instruct
OPENROUTER_HTTP_REFERER=  # optional, e.g., http://localhost
OPENROUTER_X_TITLE=       # optional, e.g., AIMS RAG Pipeline

# Vector Database Configuration
VECTOR_DB_TYPE=faiss  # Options: faiss, chroma
VECTOR_DB_PATH=./data/vector_db

# Document Storage
DOCUMENTS_PATH=./data/documents

# Scraping Configuration
SCRAPE_DELAY_SECONDS=2.0
MAX_DEPTH=5
RESPECT_ROBOTS_TXT=true

# Chunking Configuration
CHUNK_SIZE=400
CHUNK_OVERLAP=75

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BACKEND=sentence-transformers  # options: sentence-transformers, fastembed

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/pipeline.log
